<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="title">
                        <h4>Cards Hover</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <% if(shop.isLock){ %>
                                <li class="breadcrumb-item" aria-current="page"><a href="/shops/locked">Locked Shop List</a></li></li>
                            <% } %>
                            <% if(!shop.isLock){ %>
                                <li class="breadcrumb-item" aria-current="page"><a href="/shops">Shop List</a></li></li>
                            <% } %>
                            <li class="breadcrumb-item active" aria-current="page"><%=shop.name%></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Fade-in effect -->
        <h5 class="h4 text-blue mb-10">Fade-in effect</h5>
        <p class="mb-30">You can use by default <code>.da-overlay</code></p>
        <div class="row clearfix">
            <div class="col-lg-6 col-md-6 col-sm-12 mb-30 offset-lg-3">
                <div class="card card-box">
                    <img class="card-img-top" src="/vendors/images/img3.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title weight-500"><%=shop.name %></h5>
                        <p class="card-text">Shop description: Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="/shops/<%=shop._id %>/products">Products</a>
                        </li>
                        <li class="list-group-item">Address: <%=shop.address %></li>
                        <li class="list-group-item">Phone Number: <%=shop.phone %></li>                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer/footer')%>
</div>