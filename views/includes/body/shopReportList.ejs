<div class="card-box mb-30 hidden" id="reported-shops-table">
    <h2 class="h4 pd-20">Reported shops</h2>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus datatable-nosort">Report ID</th>
                <th>Product Name</th>
                <th>Reporter</th>
                <th>Issues</th>
                <th>Post date</th>
                <th class="datatable-nosort">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let report of reports) {%>
                <tr>
                    <td>
                        <h5 class="font-16"><%=report._id %></h5>
                    </td>
                    <td><%=report.productId.name %></td>
                    <td><%=report.userId.name %></td>
                    <td><%=report.body %></td>
                    <td><%=report.postDate.toDateString() %></td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="/products/<%=report.productId._id%>"><i class="dw dw-edit2"></i>View detail</a>
                                <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            <%}%>
        </tbody>
    </table>
</div>